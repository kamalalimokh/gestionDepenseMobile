<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/black"
    >
    
   <TextView android:id="@+id/tvListCategory" 
       	     android:layout_width="wrap_content"
		     android:layout_height="wrap_content" 
			 android:textColor="#FFFFFF"
			 android:textSize="24sp" 
			 android:layout_margin="5dip" 
			 android:text="@string/listcategory">      
   </TextView>
	
      <!-- Editext for Search -->
        
        
    <EditText android:id="@+id/etCategorySearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Search_Category"
        android:inputType="textVisiblePassword"/>
    
    <!-- List View -->
    <ListView android:layout_height="0dip"
		android:layout_weight="1" android:id="@+id/list_category"
		android:layout_width="fill_parent" android:background="#000000"
		android:clickable="true" android:cacheColorHint="#000000">
	</ListView>

</LinearLayout>